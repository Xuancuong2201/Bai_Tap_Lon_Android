<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="90dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"

    >
    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:background="#FFCF730F">

        <ImageView
            android:id="@+id/ver_img"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/voucher2" />

        <TextView
            android:id="@+id/ver_infor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:textStyle="italic"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/ver_img"
            android:text="Combo mua 2 tặng 1"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/ver_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ver_infor"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/ver_img"
            android:text="Hết hạn trong 2 ngày"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:textStyle="italic"
            android:layout_marginBottom="12dp"
            />

    </RelativeLayout>



</androidx.cardview.widget.CardView>